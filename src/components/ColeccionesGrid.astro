---
interface Collection {
  id: string;
  title: string;
  handle: string;
  image: string;
  productsCount: number;
}

const collections: Collection[] = [
  {
    id: '1',
    title: 'Novedades',
    handle: 'novedades',
    image: '/assets/coleccion-novedades.jpg',
    productsCount: 12
  },
  {
    id: '2',
    title: 'MÃ¡s Vendidos',
    handle: 'mas-vendidos',
    image: '/assets/coleccion-vendidos.jpg',
    productsCount: 8
  },
  {
    id: '3',
    title: 'Ofertas',
    handle: 'ofertas',
    image: '/assets/coleccion-ofertas.jpg',
    productsCount: 5
  }
];
---

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <h2 class="text-2xl font-light tracking-tight text-gray-900 mb-8">Colecciones</h2>
  
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    {collections.map(collection => (
      <a href={`/colecciones/${collection.handle}`} class="group relative block overflow-hidden rounded">
        <img
          src={collection.image}
          alt={collection.title}
          class="w-full h-64 object-cover transition duration-300 group-hover:scale-105"
          loading="lazy"
        />
        <div class="absolute inset-0 bg-black bg-opacity-20 group-hover:bg-opacity-30 transition duration-300 flex items-center justify-center">
          <div class="text-center p-4">
            <h3 class="text-xl font-medium text-white">{collection.title}</h3>
            <p class="text-sm text-white mt-1">{collection.productsCount} productos</p>
          </div>
        </div>
      </a>
    ))}
  </div>
</div>