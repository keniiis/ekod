---
import Layout from '../layouts/Layout.astro';
// BannerPromocional is no longer needed here, it's in Layout.astro
// Removed ColeccionesGrid import
import WhyChooseUs from '../components/WhyChooseUs.astro'; // Import the new component
import ProductCard from '../components/ProductCard.astro';
import TestimoniosClientes from '../components/TestimoniosClientes.astro';
import NewsletterSignup from '../components/NewsletterSignup.astro';
import { products } from '../data/products';
import { Image } from 'astro:assets'; // Import the Image component
// Removed banner import

const featuredProducts = products.slice(0, 4);
const pageTitle = "Artículos Prácticos para tu Vida Diaria";
const pageDescription = "Descubre productos útiles, originales y prácticos para tu vida diaria. Compra online en EKOD Store Chile con pago seguro y despacho a todo el país.";
---

<Layout title={pageTitle} description={pageDescription}>
  {/* BannerPromocional is now rendered globally in Layout.astro */}

  {/* Hero Section */}
  <div class="relative bg-gray-100"> 
    <div class="absolute inset-0 overflow-hidden">
      <Image
        src="/assets/banner.webp" {/*Use direct public path*/}
        alt="Banner promocional de EKOD Store" 
        class="w-full h-full object-cover" 
        loading="eager" {/* Keep eager loading for hero image */}
        width={1920} {/* Required for images in public/ */}
        height={1080} {/* Required for images in public/ */}
        format="webp" {/* Optional: Suggest a format, though Astro might not convert public images */}
      />
    </div>
    {/* Restore original centering and padding/max-width */}
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-32 text-center"> 
      {/* Restore original text color */}
      <h1 class="text-4xl font-light tracking-tight text-white sm:text-5xl lg:text-6xl">Donde la variedad, se encuentra con la confianza</h1> 
      {/* Restore original text color and max-width/centering */}
      <p class="mt-6 text-xl text-gray-100 max-w-3xl mx-auto"> 
        Descubre nuestra colección cuidadosamente seleccionada para tu vida cotidiana
      </p>
      <div class="mt-10">
        <a
          href="/tienda"
          class="inline-block px-8 py-3 border border-transparent text-base font-medium text-black bg-white hover:bg-gray-100 rounded" 
        >
          Ver Colección
        </a>
      </div>
    </div>
  </div>

  {/* Why Choose Us Section */}
  <WhyChooseUs />

  {/* Productos Destacados */}
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <h2 class="text-2xl font-light tracking-tight text-gray-900 mb-8">Productos Destacados</h2>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      {featuredProducts.map(product => (
        <ProductCard product={product} />
      ))}
    </div>

    <div class="mt-10 text-center">
      <a
        href="/tienda"
        class="inline-block px-6 py-2 border border-black text-sm font-medium text-black hover:bg-black hover:text-white transition-colors"
      >
        Ver todos los productos
      </a>
    </div>
  </div>

  {/* Testimonios */}
  <TestimoniosClientes />

  {/* Newsletter */}
  <NewsletterSignup />
</Layout>
