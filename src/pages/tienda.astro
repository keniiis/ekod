---
import Layout from '../layouts/Layout.astro';
// Removed import for ProductCard.astro as it's now handled by React
import { products } from '../data/products';
import ShopInterface from '../components/ShopInterface.tsx'; // Import the new React component

// Obtener categorías únicas
const categories = Array.from(new Set(products.map(p => p.category)));
const pageTitle = "Tienda - Explora Nuestra Colección Minimalista";
const pageDescription = "Encuentra ropa, accesorios y más en la tienda de Minimal Shop. Productos de alta calidad con diseño minimalista para tu estilo de vida.";
---

<Layout title={pageTitle} description={pageDescription}>
  <div class="max-w-7xl mx-auto px-4 py-8">
    <h1 class="text-2xl font-light mb-8">{pageTitle}</h1> {/* Use title in H1 */}
    
    {/* Render the React Shop Interface component */}
    {/* Pass products and categories, and load client-side */}
    <ShopInterface client:load products={products} categories={categories} />
  </div>
</Layout>
