---
import Layout from '../../layouts/Layout.astro';
const posts = await Astro.glob('./posts/*.mdx');
const pageTitle = "Blog - Consejos y Tendencias de Estilo Minimalista";
const pageDescription = "Explora el blog de Minimal Shop para obtener consejos sobre moda minimalista, tendencias, cuidado de prendas y más. Inspírate para un estilo de vida simple y elegante.";
---

<Layout title={pageTitle} description={pageDescription}>
  <div class="max-w-7xl mx-auto px-4 py-12">
    <h1 class="text-3xl font-light mb-8">{pageTitle}</h1> {/* Use title in H1 */}
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {posts.map(post => (
        <article class="bg-gray-50 rounded-lg shadow-md border border-gray-200 overflow-hidden">
          {post.frontmatter.image && (
            <img 
              src={post.frontmatter.image} 
              alt={post.frontmatter.title}
              class="w-full h-48 object-cover"
            />
          )}
          <div class="p-6">
            <h2 class="text-xl font-semibold mb-2">
              <a href={post.url} class="hover:text-indigo-700">
                {post.frontmatter.title}
              </a>
            </h2>
            <p class="text-gray-700 mb-4">{post.frontmatter.excerpt}</p>
            <div class="flex items-center text-sm text-gray-600">
              <span>{post.frontmatter.date}</span>
              <span class="mx-2">•</span>
              <span>{post.frontmatter.author}</span>
            </div>
          </div>
        </article>
      ))}
    </div>
  </div>
</Layout>
